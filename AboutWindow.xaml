<Window x:Class="SystemOptimizer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemOptimizer"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="About Effinitum X" Height="480" Width="600"
        Icon="Resources/AppIcon.ico"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок и основная информация -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,15">
            <Image Source="Resources/logo.png" Width="64" Height="64" DockPanel.Dock="Left"/>
            <StackPanel Margin="15,0,0,0">
                <TextBlock Text="Effinitum X" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock x:Name="tbVersion" Text="Version 1.2.2" FontSize="14" Margin="0,5,0,0"/>
                <TextBlock Text="Created by Nicet ink" FontSize="12" Margin="0,5,0,0" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            </StackPanel>
        </DockPanel>
        
        <!-- Табы с информацией -->
        <TabControl Grid.Row="1">
            <TabItem Header="About">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock TextWrapping="Wrap" Margin="0,10,0,15">
                            Effinitum X is a powerful tool designed to help you clean up
                            unnecessary files, manage system resources, and optimize your PC for
                            better performance.
                        </TextBlock>
                        
                        <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                                Padding="15" CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="FEATURES" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                                    • System information and hardware monitoring<LineBreak/>
                                    • Temporary files and system cleanup<LineBreak/>
                                    • Advanced disk space analyzer and optimization<LineBreak/>
                                    • Process management and optimization<LineBreak/>
                                    • Startup programs management<LineBreak/>
                                    • UWP apps management and uninstallation<LineBreak/>
                                    • Windows Defender control<LineBreak/>
                                    • Windows Update management<LineBreak/>
                                    • Zapret-Discord-YouTube integration for accessing blocked services
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock TextWrapping="Wrap" Margin="0,15,0,0">
                            This application is designed for Windows 10 and Windows 11 systems.
                        </TextBlock>
                        
                        <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">
                            © 2025 Nicet ink. All rights reserved.
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="License">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="MIT License" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                        <TextBlock TextWrapping="Wrap">
                            Copyright (c) 2025 Nicet ink<LineBreak/><LineBreak/>
                            
                            Permission is hereby granted, free of charge, to any person obtaining a copy
                            of this software and associated documentation files (the "Software"), to deal
                            in the Software without restriction, including without limitation the rights
                            to use, copy, modify, merge, publish, distribute, sublicense, and/or sell
                            copies of the Software, and to permit persons to whom the Software is
                            furnished to do so, subject to the following conditions:<LineBreak/><LineBreak/>
                            
                            The above copyright notice and this permission notice shall be included in all
                            copies or substantial portions of the Software.<LineBreak/><LineBreak/>
                            
                            THE SOFTWARE IS PROVIDED "AS IS", WITHOUT WARRANTY OF ANY KIND, EXPRESS OR
                            IMPLIED, INCLUDING BUT NOT LIMITED TO THE WARRANTIES OF MERCHANTABILITY,
                            FITNESS FOR A PARTICULAR PURPOSE AND NONINFRINGEMENT. IN NO EVENT SHALL THE
                            AUTHORS OR COPYRIGHT HOLDERS BE LIABLE FOR ANY CLAIM, DAMAGES OR OTHER
                            LIABILITY, WHETHER IN AN ACTION OF CONTRACT, TORT OR OTHERWISE, ARISING FROM,
                            OUT OF OR IN CONNECTION WITH THE SOFTWARE OR THE USE OR OTHER DEALINGS IN THE
                            SOFTWARE.
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Version History">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Version History" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                        
                        <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                                Padding="15" CornerRadius="4" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Version 1.2.2" FontWeight="SemiBold"/>
                                <TextBlock Text="May 18, 2025" FontStyle="Italic" Margin="0,5,0,5" 
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock TextWrapping="Wrap">
                                    • Added UWP apps management and uninstallation<LineBreak/>
                                    • Added Windows Defender control<LineBreak/>
                                    • Added Windows Update management<LineBreak/>
                                    • Added Zapret-Discord-YouTube integration<LineBreak/>
                                    • Added disk optimization with CHKDSK and defrag<LineBreak/>
                                    • Improved user interface with navigation view<LineBreak/>
                                    • Various bug fixes and performance improvements
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                                Padding="15" CornerRadius="4" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Version 1.0.0 (Initial Release)" FontWeight="SemiBold"/>
                                <TextBlock Text="May 15, 2025" FontStyle="Italic" Margin="0,5,0,5" 
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock TextWrapping="Wrap">
                                    • Initial release of Effinitum X<LineBreak/>
                                    • System information monitoring<LineBreak/>
                                    • Cleanup of temporary files<LineBreak/>
                                    • Disk space analysis<LineBreak/>
                                    • Process management<LineBreak/>
                                    • Startup optimization
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <Button Grid.Row="2" Content="Close" HorizontalAlignment="Right" 
                Margin="0,15,0,0" Padding="20,5" Click="CloseButton_Click"/>
    </Grid>
</Window> 